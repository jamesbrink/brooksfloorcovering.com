const galleryAltTexts = [
  'Custom tile shower installation in Phoenix home',
  'Marble bathtub surround with mosaic tile detail',
  'Completed oval tub installation with brushed nickel fixtures',
  'Frameless glass shower partition with mosaic tile wall',
  'Precision glass and tile craftsmanship detail',
  'Full master bathroom remodel with tiled floors and custom shower',
