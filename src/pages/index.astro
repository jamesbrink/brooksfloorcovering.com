---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Footer from '../components/Footer.astro';

const featuredServices = [
  {
    icon: 'üî®',
    title: 'Flooring Sales & Installation',
    description:
      'Professional flooring sales and installation for residential and commercial clients.',
    features: ['Hardwood', 'Tile', 'Carpet', 'Luxury Vinyl'],
  },
  {
    icon: 'üîß',
    title: 'Floor Repairs',
    description:
      'Expert repair services for all types of flooring, from minor fixes to major repairs.',
    features: ['Tile Replacement', 'Carpet Restretch', 'Grout Repairs'],
  },
  {
    icon: 'üèóÔ∏è',
    title: 'Concrete Services',
    description: 'Complete concrete solutions including grinding, leveling, and epoxy coatings.',
    features: ['Grinding', 'Leveling', 'Epoxy Coatings', 'Polishing'],
  },
  {
    icon: 'üíé',
    title: 'Specialty Services',
    description: 'Custom showers, countertops, backsplashes, and unique tile work.',
    features: ['Custom Showers', 'Countertops', 'Backsplashes'],
  },
];
---

<Layout>
  <Navigation />

  <Hero
    title="Professional Flooring Services in the Valley"
    subtitle="Professional flooring services for both residential and commercial clients throughout the Greater Phoenix Area. We deliver exceptional quality and unmatched expertise for all your flooring needs."
    ctaText="Get a Quote"
    ctaLink="/contact"
    image="/images/home-image-1.jpg"
  />

  <main>
    <!-- Services Preview -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Services</h2>
          <p class="text-neutral-600 max-w-2xl mx-auto">
            From installation to repairs, we handle all your flooring needs with professionalism and
            expertise.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto mb-12">
          {featuredServices.map((service) => <ServiceCard {...service} />)}
        </div>
        <div class="text-center">
          <a
            href="/services"
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300"
          >
            View All Services
          </a>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-20 bg-neutral-50">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center gap-12 max-w-6xl mx-auto">
          <div class="md:w-1/2 order-2 md:order-1">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">Three Decades of Excellence</h2>
            <p class="text-neutral-600 mb-6">
              For over three decades, Brooks Floor Covering has accumulated experience in the floor
              covering industry and can tackle just about any challenge. We understand the value of
              word-of-mouth, which is why we always go the extra mile on every project.
            </p>
            <p class="text-neutral-600 mb-8">
              Our team is family-owned and operated, and we love working hand-in-hand with our
              customers to deliver the perfect flooring solution for their needs.
            </p>
            <a
              href="/about"
              class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300"
            >
              Learn More About Us
            </a>
          </div>
          <div class="md:w-1/2 order-1 md:order-2">
            <img
              src="/images/home-image-2.jpg"
              alt="Brooks Floor Covering Experience"
              class="rounded-lg shadow-lg w-full"
              width="960"
              height="720"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Preview -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Work</h2>
          <p class="text-neutral-600 max-w-2xl mx-auto">
            See examples of our professional flooring installations throughout the Phoenix Valley.
          </p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-6xl mx-auto mb-12">
          {
            [1, 2, 3, 4, 5, 6, 7, 8].map((num) => {
              const imageNum = String(num).padStart(3, '0');
              return (
                <div class="aspect-square overflow-hidden rounded-lg shadow-md">
                  <img
                    src={`/images/${imageNum}.jpg`}
                    alt={`Project ${num}`}
                    class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
                    loading="lazy"
                    width="400"
                    height="400"
                    decoding="async"
                  />
                </div>
              );
            })
          }
        </div>
        <div class="text-center">
          <a
            href="/gallery"
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300"
          >
            View Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-blue-900 to-blue-700 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Transform Your Space?</h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
          Get a free, no-obligation estimate on your flooring project today.
        </p>
        <a
          href="/contact"
          class="inline-block bg-white text-blue-700 px-10 py-4 rounded-lg font-semibold hover:bg-blue-50 transition duration-300 text-lg"
        >
          Get Your Free Estimate
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
