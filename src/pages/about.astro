---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import Footer from '../components/Footer.astro';
import { trustedOrgs } from '../data/clients';

const flooringManufacturers = {
  title: 'Flooring Manufacturers & Distributors',
  logos: [
    { name: 'Arizona Tile', file: 'arizona-tile.png' },
    { name: 'Dal-Tile', file: 'daltile.png' },
    { name: 'Bedrosians', file: 'bedrosians.png' },
    { name: 'Cactus Tile', file: 'cactus-tile.png' },
    { name: 'The Tile Shop', file: 'tile-shop.png' },
    { name: 'Shaw', file: 'shaw.png' },
    { name: 'Mohawk', file: 'mohawk.png' },
    { name: 'Emser', file: 'emser.png' },
    { name: 'QDI', file: 'qdi.png' },
    { name: 'Galleher', file: 'galleher.png' },
    { name: 'Tri-West', file: 'tri-west.png' },
  ],
};

const installationSystems = {
  title: 'Professional Installation Systems',
  logos: [
    { name: 'Schluter', file: 'schluter.png' },
    { name: 'Laticrete', file: 'laticrete.png' },
    { name: 'MAPEI', file: 'mapei.png' },
    { name: 'Custom Building Products', file: 'custom-building-products.png' },
  ],
};

const floorPreparation = {
  title: 'Floor Preparation & Moisture Mitigation',
  logos: [
    { name: 'UZIN', file: 'uzin.png' },
    { name: 'Euclid', file: 'euclid.png' },
  ],
};

const concreteCoatings = {
  title: 'Concrete Coatings',
  logos: [
    { name: 'CPS', file: 'cps.png' },
    { name: 'APF', file: 'apf.png' },
    { name: 'Ameripolish', file: 'ameripolish.png' },
    { name: 'Hi-Tech', file: 'hi-tech.png' },
  ],
};

const distributorCategories = [
  flooringManufacturers,
  installationSystems,
  floorPreparation,
  concreteCoatings,
];

const whyChooseUs = [
  '30+ Years Experience',
  'Licensed, Bonded & Insured',
  'ROC #226840',
  'Family Owned',
  'Free Estimates',
  'Warranty Offered',
];

const reviewsJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'HomeAndConstructionBusiness',
  '@id': 'https://brooksfloorcovering.com/#business',
  name: 'Brooks Floor Covering',
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: 4.9,
    reviewCount: 150,
    bestRating: 5,
  },
  review: [
    {
      '@type': 'Review',
      author: { '@type': 'Person', name: 'Linda D.' },
      reviewRating: { '@type': 'Rating', ratingValue: 5, bestRating: 5 },
      reviewBody:
        "We've used the services of Brooks Floor Covering several times and will definitely call the owner, Josh, for any future projects we will have. Josh and his team have always been professional and do excellent work.",
    },
    {
      '@type': 'Review',
      author: { '@type': 'Person', name: 'Julie M.' },
      reviewRating: { '@type': 'Rating', ratingValue: 5, bestRating: 5 },
      reviewBody:
        'We manage numerous properties throughout the Greater Phoenix Area. Whenever there is a problem or we need any new flooring in the Phoenix Metro area, we call Brooks Floor Covering. Everything is always handled professionally and promptly.',
    },
    {
      '@type': 'Review',
      author: { '@type': 'Person', name: 'Don S.' },
      reviewRating: { '@type': 'Rating', ratingValue: 5, bestRating: 5 },
      reviewBody:
        "Over the last five years I've worked with Josh on at least twelve projects in the West Valley area and I'm always confident when hiring him. He takes pride in his work and he's someone I can always count on.",
    },
  ],
};

const breadcrumbJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://brooksfloorcovering.com/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'About',
      item: 'https://brooksfloorcovering.com/about/',
    },
  ],
};
---

<Layout
  title="About Brooks Floor Covering | 30+ Years in Phoenix, AZ"
  description="Learn about Brooks Floor Covering — a family-owned flooring company with 30+ years of experience serving the Greater Phoenix Area. Licensed, bonded, insured — ROC #226840."
  jsonLd={[reviewsJsonLd, breadcrumbJsonLd]}
  ogImage="/images/site-brooks-team-flooring-project.jpg"
>
  <Navigation />

  <Hero
    title="About Brooks Floor Covering"
    subtitle="Three decades of excellence serving the Greater Phoenix Area."
    compact={true}
  />

  <Breadcrumb items={[{ label: 'Home', href: '/' }, { label: 'About' }]} />

  <main>
    <!-- About Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center gap-12 max-w-6xl mx-auto">
          <div class="md:w-1/2">
            <Image
              src="/images/site-brooks-team-flooring-project.jpg"
              alt="Brooks Floor Covering team at work on a Phoenix flooring project"
              class="rounded-lg shadow-lg w-full"
              width={960}
              height={720}
              inferSize
              loading="eager"
            />
          </div>
          <div class="md:w-1/2">
            <h2 class="text-3xl md:text-4xl font-bold mb-6 font-display tracking-tight">
              Our Story
            </h2>
            <p class="text-neutral-700 mb-6 leading-relaxed">
              For over three decades, Brooks Floor Covering has been the trusted name for flooring
              services across Phoenix, Glendale, Scottsdale, and the entire West Valley. We've
              accumulated deep experience in the floor covering industry and can tackle just about
              any challenge. We understand the value of word-of-mouth, which is why we always go the
              extra mile on every project.
            </p>
            <p class="text-neutral-700 mb-8 leading-relaxed">
              Our team is family-owned and operated, and we love working hand-in-hand with our
              customers to deliver the perfect flooring solution for their homes and businesses
              throughout the Greater Phoenix Area.
            </p>

            <h3 class="text-2xl font-bold mb-4">Why Choose Us</h3>
            <div class="grid grid-cols-2 gap-4 mb-6">
              {
                whyChooseUs.map((item) => (
                  <div class="flex items-start space-x-2">
                    <span class="text-brand-accent text-xl mt-0.5 font-bold">&#10003;</span>
                    <span class="text-neutral-700 font-medium">{item}</span>
                  </div>
                ))
              }
            </div>
            <a
              href="/services"
              class="inline-block text-brand-primary font-semibold hover:text-brand-primary-dark transition-colors"
            >
              View all our services &rarr;
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Trusted Organizations Section -->
    <section class="py-20 bg-neutral-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 font-display tracking-tight">
          Trusted by Leading Organizations
        </h2>
        <p class="text-center text-neutral-700 mb-12 max-w-2xl mx-auto leading-relaxed">
          Our work speaks for itself. We've provided flooring services for some of the most
          recognizable organizations in the Valley.
        </p>
        <div
          class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 items-center justify-items-center max-w-6xl mx-auto"
        >
          {
            trustedOrgs.map((org) => (
              <Image
                src={org.logo}
                alt={`${org.name} logo`}
                width={200}
                height={100}
                inferSize
                class="w-32 h-auto object-contain grayscale hover:grayscale-0 hover:scale-110 hover:shadow-lg transition-all duration-300"
                loading="lazy"
              />
            ))
          }
        </div>
        <p class="text-sm text-neutral-500 text-center mt-8 max-w-3xl mx-auto italic">
          We have had the privilege of providing flooring services to the organizations listed
          above, both through direct partnerships and through our work as a trusted subcontractor
          alongside general contractors. This list reflects completed projects and professional
          relationships&mdash;not endorsements.
        </p>
      </div>
    </section>

    <!-- Distributors Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4 font-display tracking-tight">
          Trusted Products. Proven Results.
        </h2>
        <p class="text-center text-neutral-700 mb-12 max-w-2xl mx-auto leading-relaxed">
          We partner with industry-leading manufacturers to provide you with the highest quality
          products for your Phoenix-area home or business.
        </p>

        {
          distributorCategories.map((category) => (
            <div class="mb-12">
              <h3 class="text-xl font-semibold text-neutral-800 text-center mb-6">
                {category.title}
              </h3>
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 items-center justify-items-center max-w-6xl mx-auto">
                {category.logos.map((logo) => (
                  <Image
                    src={`/images/${logo.file}`}
                    alt={logo.name}
                    class="w-32 h-auto object-contain grayscale hover:grayscale-0 hover:scale-110 hover:shadow-lg transition-all duration-300"
                    width={128}
                    height={64}
                    inferSize
                    loading="lazy"
                  />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Reviews Section -->
    <section class="py-20 bg-neutral-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 font-display tracking-tight">
          Customer Reviews
        </h2>

        <!-- Rating Summary -->
        <div
          class="max-w-4xl mx-auto mb-16 bg-white rounded-xl shadow-lg overflow-hidden border-t-4 border-t-brand-accent"
        >
          <div class="flex flex-col md:flex-row items-center justify-between p-8">
            <div class="text-center md:text-left mb-8 md:mb-0">
              <div class="text-5xl font-bold text-brand-primary mb-2">4.9</div>
              <div
                class="flex items-center justify-center md:justify-start text-yellow-400 text-xl mb-2"
              >
                <span>&#9733;&#9733;&#9733;&#9733;&#9733;</span>
              </div>
              <div class="text-neutral-600">Based on 150+ Reviews</div>
            </div>

            <div class="flex flex-col items-center md:items-end space-y-4">
              <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
                <a
                  href="https://goo.gl/maps/nuodwwpJoyuMW9Ae9"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-2 text-neutral-600 hover:text-brand-primary transition-colors"
                >
                  <span class="text-[#4285F4] text-3xl">G</span>
                  <span class="font-semibold">Google</span>
                </a>
                <a
                  href="https://www.yelp.com/biz/brooks-floor-covering-glendale-2"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-2 text-neutral-600 hover:text-red-600 transition-colors"
                >
                  <span class="text-[#FF1A1A] text-3xl">&#9733;</span>
                  <span class="font-semibold">Yelp</span>
                </a>
                <a
                  href="https://www.facebook.com/brooksfloorcovering/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center space-x-2 text-neutral-600 hover:text-[#1877F2] transition-colors"
                >
                  <span class="text-[#1877F2] text-3xl">f</span>
                  <span class="font-semibold">Facebook</span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Review Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="bg-white p-8 rounded-xl shadow-lg relative border-t-4 border-t-brand-primary">
            <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
              <Image
                src="/images/reviewers/linda.jpg"
                alt="Linda D."
                class="w-16 h-16 rounded-full object-cover border-4 border-white shadow-lg"
                width={64}
                height={64}
                inferSize
                loading="lazy"
              />
            </div>
            <div class="mt-4">
              <div class="text-brand-accent text-4xl leading-none mb-2 font-display">&ldquo;</div>
              <div class="flex items-center justify-center mb-4">
                <div class="text-yellow-400">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
              </div>
              <p class="text-neutral-600 mb-6 text-center italic leading-relaxed">
                "We've used the services of Brooks Floor Covering several times and will definitely
                call the owner, Josh, for any future projects we will have. Josh and his team have
                always been professional and do excellent work."
              </p>
              <div class="text-center">
                <div class="font-semibold text-neutral-800 text-lg">Linda D.</div>
                <div class="text-neutral-500 text-sm">Residential Customer</div>
              </div>
            </div>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-lg relative border-t-4 border-t-brand-primary">
            <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
              <Image
                src="/images/reviewers/julie-m.jpg"
                alt="Julie M."
                class="w-16 h-16 rounded-full object-cover border-4 border-white shadow-lg"
                width={64}
                height={64}
                inferSize
                loading="lazy"
              />
            </div>
            <div class="mt-4">
              <div class="text-brand-accent text-4xl leading-none mb-2 font-display">&ldquo;</div>
              <div class="flex items-center justify-center mb-4">
                <div class="text-yellow-400">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
              </div>
              <p class="text-neutral-600 mb-6 text-center italic leading-relaxed">
                "We manage numerous properties throughout the Greater Phoenix Area. Whenever there
                is a problem or we need any new flooring in the Phoenix Metro area, we call Brooks
                Floor Covering. Everything is always handled professionally and promptly."
              </p>
              <div class="text-center">
                <div class="font-semibold text-neutral-800 text-lg">Julie M.</div>
                <div class="text-neutral-500 text-sm">Property Manager</div>
              </div>
            </div>
          </div>

          <div class="bg-white p-8 rounded-xl shadow-lg relative border-t-4 border-t-brand-primary">
            <div class="absolute -top-6 left-1/2 transform -translate-x-1/2">
              <Image
                src="/images/reviewers/don.jpg"
                alt="Don S."
                class="w-16 h-16 rounded-full object-cover border-4 border-white shadow-lg"
                width={64}
                height={64}
                inferSize
                loading="lazy"
              />
            </div>
            <div class="mt-4">
              <div class="text-brand-accent text-4xl leading-none mb-2 font-display">&ldquo;</div>
              <div class="flex items-center justify-center mb-4">
                <div class="text-yellow-400">&#9733;&#9733;&#9733;&#9733;&#9733;</div>
              </div>
              <p class="text-neutral-600 mb-6 text-center italic leading-relaxed">
                "Over the last five years I've worked with Josh on at least twelve projects in the
                West Valley area and I'm always confident when hiring him. He takes pride in his
                work and he's someone I can always count on."
              </p>
              <div class="text-center">
                <div class="font-semibold text-neutral-800 text-lg">Don S.</div>
                <div class="text-neutral-500 text-sm">General Contractor</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-brand-dark to-brand-navy text-white">
      <div class="container mx-auto px-4 text-center max-w-3xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 font-display tracking-tight">
          Ready to Transform Your Floors?
        </h2>
        <p class="text-lg leading-relaxed opacity-90 mb-8">
          Whether you need tile, carpet, hardwood, or polished concrete, our experienced team is
          ready to bring your vision to life. Get started with a free estimate today.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/services"
            class="inline-block bg-brand-accent text-white px-8 py-3 rounded-lg font-semibold hover:bg-brand-accent-dark transition duration-300 shadow-lg"
          >
            Explore Our Services
          </a>
          <a
            href="/contact"
            class="inline-block bg-white text-brand-dark px-8 py-3 rounded-lg font-semibold hover:bg-neutral-100 transition duration-300 shadow-lg"
          >
            Get Your Free Estimate
          </a>
        </div>
      </div>
    </section>

    <!-- Share Your Experience -->
    <section class="py-16 bg-neutral-50">
      <div class="container mx-auto px-4 text-center max-w-3xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 font-display tracking-tight">
          Share Your Experience
        </h2>
        <p class="text-neutral-700 mb-8 leading-relaxed">
          Had a great experience with Brooks Floor Covering? We'd love to hear from you. Leave us a
          review on your favorite platform.
        </p>
        <div class="flex flex-wrap items-center justify-center gap-4">
          <a
            href="https://goo.gl/maps/nuodwwpJoyuMW9Ae9"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Review Brooks Floor Covering on Google Maps (opens in a new tab)"
            class="inline-flex items-center gap-2 bg-white border border-neutral-200 px-6 py-3 rounded-lg font-semibold text-neutral-700 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
          >
            <span class="text-[#4285F4] text-xl" aria-hidden="true">G</span>
            Review on Google
          </a>
          <a
            href="https://www.yelp.com/biz/brooks-floor-covering-glendale-2"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Review Brooks Floor Covering on Yelp (opens in a new tab)"
            class="inline-flex items-center gap-2 bg-white border border-neutral-200 px-6 py-3 rounded-lg font-semibold text-neutral-700 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
          >
            <span class="text-[#FF1A1A] text-xl" aria-hidden="true">&#9733;</span>
            Review on Yelp
          </a>
          <a
            href="https://www.facebook.com/brooksfloorcovering/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Review Brooks Floor Covering on Facebook (opens in a new tab)"
            class="inline-flex items-center gap-2 bg-white border border-neutral-200 px-6 py-3 rounded-lg font-semibold text-neutral-700 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
          >
            <span class="text-[#1877F2] text-xl" aria-hidden="true">f</span>
            Review on Facebook
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
