---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Test Gallery">
  <div style="padding: 100px 20px;">
    <h1 style="font-size: 2rem; margin-bottom: 20px;">Test Gallery - Raw Images</h1>
    <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 16px;">
      <img src="/images/001.jpg" alt="Test 1" style="width: 100%; height: auto; display: block;" />
      <img src="/images/002.jpg" alt="Test 2" style="width: 100%; height: auto; display: block;" />
      <img src="/images/003.jpg" alt="Test 3" style="width: 100%; height: auto; display: block;" />
      <img src="/images/004.jpg" alt="Test 4" style="width: 100%; height: auto; display: block;" />
    </div>
  </div>
</Layout>
