---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Page Not Found | Brooks Floor Covering"
  description="The page you're looking for doesn't exist. Browse our flooring services or contact us for help."
  noindex
>
  <Navigation />

  <section class="pt-20 bg-gradient-to-br from-brand-dark to-brand-navy text-white">
    <div class="container mx-auto px-4 py-16 md:py-24 text-center max-w-2xl">
      <p class="text-6xl md:text-8xl font-bold font-display mb-4 opacity-30">404</p>
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-4 font-display">
        Page Not Found
      </h1>
      <p class="text-lg md:text-xl leading-relaxed opacity-90 mb-8">
        Sorry, we couldn't find the page you're looking for. It may have been moved or no longer
        exists.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-block bg-brand-accent text-white px-8 py-3 rounded-lg font-semibold hover:bg-brand-accent-dark transition duration-300 shadow-lg"
        >
          Back to Home
        </a>
        <a
          href="/services"
          class="inline-block bg-white/10 text-white px-8 py-3 rounded-lg font-semibold hover:bg-white/20 transition duration-300 border border-white/20"
        >
          Browse Services
        </a>
      </div>
    </div>
  </section>

  <main>
    <section class="py-16 bg-neutral-50">
      <div class="container mx-auto px-4 text-center max-w-3xl">
        <h2 class="text-2xl font-bold mb-6 font-display tracking-tight">Looking for something?</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
          <a
            href="/services"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            Our Services
          </a>
          <a
            href="/gallery"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            Project Gallery
          </a>
          <a
            href="/contact"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            Contact Us
          </a>
          <a
            href="/commercial"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            Commercial
          </a>
          <a
            href="/residential"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            Residential
          </a>
          <a
            href="/service-areas"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            Service Areas
          </a>
          <a
            href="/about"
            class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-neutral-700 hover:text-brand-primary font-medium"
          >
            About Us
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
