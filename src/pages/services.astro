---

<Layout title="Our Services - Brooks Floor Covering">
  <Navigation />

  <Hero
    title="Our Services"
    subtitle="Professional flooring solutions for residential and commercial projects throughout the Greater Phoenix Area."
    compact={true}
  />

  <main>
    <!-- Services Grid -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {services.map((service) => <ServiceCard {...service} />)}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-neutral-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
        <p class="text-neutral-600 mb-8 max-w-2xl mx-auto">
          Contact us today for a free, no-obligation estimate on your flooring project.
        </p>
        <a
          href="/contact"
          class="inline-block bg-blue-600 text-white px-10 py-4 rounded-lg font-semibold hover:bg-blue-700 transition duration-300 text-lg"
        >
          Get Your Free Estimate
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
