---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact Us - Brooks Floor Covering"
  description="Get a free flooring estimate from Brooks Floor Covering. Call (623) 688-8422 or text us. Serving the Greater Phoenix Area. ROC #226840."
>
  <Navigation />

  <Hero
    title="Get Your Free Estimate"
    subtitle="Ready to transform your space? Reach out today â€” no forms, no waiting."
    compact={true}
  />

  <main>
    <!-- Primary CTA Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-16">
          <a
            href="tel:+16236888422"
            class="group flex flex-col items-center gap-3 p-8 rounded-2xl bg-blue-600 text-white shadow-lg hover:bg-blue-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-4xl" aria-hidden="true">&#128222;</span>
            <span class="text-lg font-bold">Call Us</span>
            <span class="text-blue-100 text-sm">(623) 688-8422</span>
          </a>

          <a
            href="sms:+16236888422"
            class="group flex flex-col items-center gap-3 p-8 rounded-2xl bg-emerald-600 text-white shadow-lg hover:bg-emerald-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-4xl" aria-hidden="true">&#128172;</span>
            <span class="text-lg font-bold">Text Us</span>
            <span class="text-emerald-100 text-sm">(623) 688-8422</span>
          </a>

          <a
            href="mailto:info@brooksfloorcovering.com"
            class="group flex flex-col items-center gap-3 p-8 rounded-2xl bg-neutral-800 text-white shadow-lg hover:bg-neutral-900 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-4xl" aria-hidden="true">&#9993;</span>
            <span class="text-lg font-bold">Email Us</span>
            <span class="text-neutral-300 text-sm">info@brooksfloorcovering.com</span>
          </a>
        </div>

        <!-- Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          <div class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold mb-4">Business Hours</h2>
              <div class="space-y-2 text-neutral-600">
                <div class="flex justify-between border-b border-neutral-100 pb-2">
                  <span>Monday &ndash; Friday</span>
                  <span class="font-medium text-neutral-800">8:00 AM &ndash; 5:00 PM</span>
                </div>
                <div class="flex justify-between border-b border-neutral-100 pb-2">
                  <span>Saturday</span>
                  <span class="font-medium text-neutral-800">By appointment</span>
                </div>
                <div class="flex justify-between">
                  <span>Sunday</span>
                  <span class="font-medium text-neutral-800">Closed</span>
                </div>
              </div>
            </div>

            <div>
              <h2 class="text-2xl font-bold mb-4">Service Area</h2>
              <p class="text-neutral-600">
                Greater Phoenix Area, Arizona &mdash; from Glendale to Mesa, Scottsdale to Chandler,
                we bring professional flooring services to homes and businesses throughout the
                Valley.
              </p>
            </div>
          </div>

          <div class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold mb-4">Licensed &amp; Insured</h2>
              <p class="text-neutral-600">
                Arizona Registrar of Contractors<br />
                <span class="font-semibold text-neutral-800">ROC #226840</span>
              </p>
              <p class="text-neutral-600 mt-2">
                30+ years of experience serving the Phoenix Valley.
              </p>
            </div>

            <div>
              <h2 class="text-2xl font-bold mb-4">What to Expect</h2>
              <ul class="space-y-2 text-neutral-600">
                <li class="flex items-start gap-2">
                  <span class="text-blue-600 font-bold mt-0.5">&#10003;</span>
                  Free, no-obligation estimate
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-blue-600 font-bold mt-0.5">&#10003;</span>
                  Same-day response on calls and texts
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-blue-600 font-bold mt-0.5">&#10003;</span>
                  Transparent pricing, no hidden fees
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-blue-600 font-bold mt-0.5">&#10003;</span>
                  Professional installation by our own crew
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bottom CTA -->
    <section class="py-16 bg-neutral-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">See What We Can Do</h2>
        <p class="text-neutral-600 mb-8 max-w-2xl mx-auto">
          Browse our portfolio of completed tile, carpet, concrete, and epoxy projects across the
          Valley.
        </p>
        <a
          href="/gallery"
          class="inline-block bg-blue-600 text-white px-10 py-4 rounded-lg font-semibold hover:bg-blue-700 transition duration-300 text-lg"
        >
          View Our Work
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
