---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - Brooks Floor Covering">
  <Navigation />

  <Hero
    title="Get Your Free Estimate"
    subtitle="Ready to transform your space? Contact us today for a free, no-obligation estimate."
    compact={true}
  />

  <main>
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div class="space-y-8">
            <div>
              <h2 class="text-3xl font-bold mb-6">Get in Touch</h2>
              <p class="text-neutral-600 mb-8">
                We're here to help with all your flooring needs. Reach out to us by phone, email, or
                using the contact form.
              </p>
            </div>

            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="text-3xl text-blue-600">üìû</div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">Call Us</h3>
                  <a
                    href="tel:+16236888422"
                    class="text-blue-600 hover:text-blue-700 text-xl font-medium"
                  >
                    (623) 688-8422
                  </a>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-blue-600">üìß</div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">Email Us</h3>
                  <a
                    href="mailto:info@brooksfloorcovering.com"
                    class="text-blue-600 hover:text-blue-700 break-all"
                  >
                    info@brooksfloorcovering.com
                  </a>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-blue-600">üìç</div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">Service Area</h3>
                  <p class="text-neutral-600">Greater Phoenix Area, Arizona</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-blue-600">üïê</div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">Business Hours</h3>
                  <p class="text-neutral-600">Monday - Friday: 8:00 AM - 5:00 PM</p>
                  <p class="text-neutral-600">Saturday: By appointment</p>
                  <p class="text-neutral-600">Sunday: Closed</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="text-3xl text-blue-600">üîí</div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">Licensed & Insured</h3>
                  <p class="text-neutral-600">ROC #226840</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <h3 class="text-2xl font-bold mb-6">Send Us a Message</h3>
            <ContactForm />
          </div>
        </div>
      </div>
    </section>

    <!-- Map or Additional CTA -->
    <section class="py-16 bg-neutral-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Serving the Greater Phoenix Area</h2>
        <p class="text-neutral-600 mb-8 max-w-2xl mx-auto">
          From Glendale to Mesa, Scottsdale to Chandler, we bring professional flooring services to
          homes and businesses throughout the Valley.
        </p>
        <a
          href="/gallery"
          class="inline-block bg-blue-600 text-white px-10 py-4 rounded-lg font-semibold hover:bg-blue-700 transition duration-300 text-lg"
        >
          View Our Work
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
