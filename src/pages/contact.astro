---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';

const contactPointJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'HomeAndConstructionBusiness',
  '@id': 'https://brooksfloorcovering.com/#business',
  name: 'Brooks Floor Covering',
  telephone: '+1-623-688-8422',
  email: 'info@brooksfloorcovering.com',
  url: 'https://brooksfloorcovering.com',
  areaServed: [
    { '@type': 'City', name: 'Phoenix', containedInPlace: { '@type': 'State', name: 'Arizona' } },
    {
      '@type': 'City',
      name: 'Scottsdale',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
    {
      '@type': 'City',
      name: 'Glendale',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
    { '@type': 'City', name: 'Mesa', containedInPlace: { '@type': 'State', name: 'Arizona' } },
    { '@type': 'City', name: 'Tempe', containedInPlace: { '@type': 'State', name: 'Arizona' } },
    {
      '@type': 'City',
      name: 'Chandler',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
    { '@type': 'City', name: 'Peoria', containedInPlace: { '@type': 'State', name: 'Arizona' } },
    {
      '@type': 'City',
      name: 'Surprise',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
    {
      '@type': 'City',
      name: 'Avondale',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
    {
      '@type': 'City',
      name: 'Goodyear',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
    {
      '@type': 'City',
      name: 'Buckeye',
      containedInPlace: { '@type': 'State', name: 'Arizona' },
    },
  ],
  contactPoint: {
    '@type': 'ContactPoint',
    telephone: '+1-623-688-8422',
    contactType: 'customer service',
    availableLanguage: 'English',
    areaServed: 'US-AZ',
  },
  openingHoursSpecification: [
    {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '08:00',
      closes: '17:00',
    },
  ],
};

const breadcrumbJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://brooksfloorcovering.com/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Contact',
      item: 'https://brooksfloorcovering.com/contact/',
    },
  ],
};
---

<Layout
  title="Free Flooring Estimate | Phoenix, AZ - Brooks Floor Covering"
  description="Get a free flooring estimate from Brooks Floor Covering. Call (623) 688-8422 or text us. Serving Phoenix, Scottsdale, Mesa, and the Greater Phoenix Area."
  jsonLd={[contactPointJsonLd, breadcrumbJsonLd]}
  ogImage="/images/home-image-1.jpg"
>
  <Navigation />

  <Hero
    title="Get Your Free Estimate"
    subtitle="Ready to transform your space? Reach out today â€” no forms, no waiting."
    compact={true}
  />

  <main>
    <!-- Primary CTA Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-16">
          <a
            href="tel:+16236888422"
            class="group flex flex-col items-center gap-3 p-8 rounded-2xl bg-brand-primary text-white shadow-lg hover:bg-brand-primary-dark hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-4xl" aria-hidden="true">&#128222;</span>
            <span class="text-lg font-bold">Call Us</span>
            <span class="text-white/80 text-sm">(623) 688-8422</span>
          </a>

          <a
            href="sms:+16236888422"
            class="group flex flex-col items-center gap-3 p-8 rounded-2xl bg-brand-accent text-white shadow-lg hover:bg-brand-accent-dark hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-4xl" aria-hidden="true">&#128172;</span>
            <span class="text-lg font-bold">Text Us</span>
            <span class="text-white/80 text-sm">(623) 688-8422</span>
          </a>

          <a
            href="mailto:info@brooksfloorcovering.com"
            class="group flex flex-col items-center gap-3 p-8 rounded-2xl bg-brand-dark text-white shadow-lg hover:bg-brand-navy hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-4xl" aria-hidden="true">&#9993;</span>
            <span class="text-lg font-bold">Email Us</span>
            <span class="text-white/80 text-sm">info@brooksfloorcovering.com</span>
          </a>
        </div>

        <!-- Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          <div class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold mb-4 font-display tracking-tight">Business Hours</h2>
              <div class="space-y-2 text-neutral-700">
                <div class="flex justify-between border-b border-neutral-100 pb-2">
                  <span>Monday &ndash; Friday</span>
                  <span class="font-medium text-neutral-800">8:00 AM &ndash; 5:00 PM</span>
                </div>
                <div class="flex justify-between border-b border-neutral-100 pb-2">
                  <span>Saturday</span>
                  <span class="font-medium text-neutral-800">By appointment</span>
                </div>
                <div class="flex justify-between">
                  <span>Sunday</span>
                  <span class="font-medium text-neutral-800">Closed</span>
                </div>
              </div>
            </div>

            <div>
              <h2 class="text-2xl font-bold mb-4 font-display tracking-tight">Service Area</h2>
              <p class="text-neutral-700 leading-relaxed mb-3">
                We proudly serve the entire Greater Phoenix Area, bringing professional flooring
                services to homes and businesses across the Valley.
              </p>
              <div class="grid grid-cols-2 gap-2 text-sm">
                {
                  [
                    'Phoenix',
                    'Scottsdale',
                    'Glendale',
                    'Mesa',
                    'Tempe',
                    'Chandler',
                    'Peoria',
                    'Surprise',
                    'Goodyear',
                    'Avondale',
                    'Buckeye',
                  ].map((city) => (
                    <div class="flex items-center gap-2">
                      <span class="text-brand-accent font-bold">&#10003;</span>
                      <span class="text-neutral-700 font-medium">{city}</span>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold mb-4 font-display tracking-tight">
                Licensed &amp; Insured
              </h2>
              <p class="text-neutral-700 leading-relaxed">
                Arizona Registrar of Contractors<br />
                <span class="font-semibold text-neutral-800">ROC #226840</span>
              </p>
              <p class="text-neutral-700 mt-2 leading-relaxed">
                30+ years of experience serving the Phoenix Valley.
              </p>
            </div>

            <div>
              <h2 class="text-2xl font-bold mb-4 font-display tracking-tight">What to Expect</h2>
              <ul class="space-y-2 text-neutral-700">
                <li class="flex items-start gap-2">
                  <span class="text-brand-accent font-bold mt-0.5">&#10003;</span>
                  Free, no-obligation estimate
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-brand-accent font-bold mt-0.5">&#10003;</span>
                  Same-day response on calls and texts
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-brand-accent font-bold mt-0.5">&#10003;</span>
                  Transparent pricing, no hidden fees
                </li>
                <li class="flex items-start gap-2">
                  <span class="text-brand-accent font-bold mt-0.5">&#10003;</span>
                  Professional installation by our own crew
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bottom CTA -->
    <section class="py-16 bg-neutral-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 font-display tracking-tight">
          See What We Can Do
        </h2>
        <p class="text-neutral-700 mb-8 max-w-2xl mx-auto leading-relaxed">
          Browse our portfolio of completed tile, carpet, concrete, and epoxy projects across the
          Valley.
        </p>
        <a
          href="/gallery"
          class="inline-block bg-brand-accent text-white px-10 py-4 rounded-lg font-semibold hover:bg-brand-accent-dark transition duration-300 text-lg shadow-lg"
        >
          View Our Work
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
