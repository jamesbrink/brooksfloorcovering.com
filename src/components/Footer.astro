---
const currentYear = new Date().getFullYear();

const serviceLinks = [
  { href: '/services/carpet', label: 'Carpet Flooring' },
  { href: '/services/tile', label: 'Tile Flooring' },
  { href: '/services/luxury-vinyl-plank', label: 'Luxury Vinyl Plank' },
  { href: '/services/engineered-hardwood', label: 'Engineered Hardwood' },
  { href: '/services/polished-concrete', label: 'Polished Concrete' },
  { href: '/services/epoxy', label: 'Epoxy Flooring' },
  { href: '/services/floor-preparation', label: 'Floor Preparation' },
  { href: '/services/custom-tile-showers', label: 'Custom Tile Showers' },
];

const serviceAreaCities = [
  'Phoenix',
  'Scottsdale',
  'Mesa',
  'Chandler',
  'Tempe',
  'Gilbert',
  'Glendale',
  'Peoria',
  'Surprise',
  'Goodyear',
  'Avondale',
  'Buckeye',
