---

<footer class="bg-slate-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4 font-display">Brooks Floor Covering</h3>
        <p class="text-neutral-400 leading-relaxed mb-4">
          Professional flooring services in the Greater Phoenix Area since 1994.
        </p>
        <p class="text-neutral-400 leading-relaxed mb-5">
          Family-owned and operated with over three decades of excellence.
        </p>
        <div class="flex items-center gap-4">
          <a
            href="https://g.page/r/Cf9VNXO1x_XYEAE/review"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Brooks Floor Covering on Google"
            class="w-9 h-9 rounded-full bg-white/10 flex items-center justify-center text-neutral-300 hover:bg-[#4285F4] hover:text-white transition-all duration-300"
          >
            <span class="text-sm font-bold">G</span>
          </a>
          <a
            href="https://www.yelp.com/biz/brooks-floor-covering-glendale-2"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Brooks Floor Covering on Yelp"
            class="w-9 h-9 rounded-full bg-white/10 flex items-center justify-center text-neutral-300 hover:bg-[#FF1A1A] hover:text-white transition-all duration-300"
          >
            <span class="text-sm" aria-hidden="true">&#9733;</span>
          </a>
          <a
            href="https://www.facebook.com/brooksfloorcovering/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Brooks Floor Covering on Facebook"
            class="w-9 h-9 rounded-full bg-white/10 flex items-center justify-center text-neutral-300 hover:bg-[#1877F2] hover:text-white transition-all duration-300"
          >
            <span class="text-sm font-bold">f</span>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-xl font-bold mb-4 font-display">Services</h3>
        <ul class="space-y-2 text-neutral-400">
          {
            serviceLinks.map((link) => (
              <li>
                <a href={link.href} class="hover:text-brand-accent transition-colors">
                  {link.label}
                </a>
              </li>
            ))
          }
          <li>
            <a
              href="/services"
              class="text-brand-accent hover:text-white transition-colors font-medium"
            >
              All Services &rarr;
            </a>
          </li>
        </ul>
      </div>

      <!-- Service Areas -->
      <div>
        <h3 class="text-xl font-bold mb-4 font-display">Service Areas</h3>
        <ul class="grid grid-cols-2 gap-x-4 gap-y-2 text-neutral-400">
          {
            serviceAreaCities.map((city) => (
              <li>
                <a href="/service-areas" class="hover:text-brand-accent transition-colors">
                  {city}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-xl font-bold mb-4 font-display">Contact Us</h3>
        <address class="not-italic space-y-2 text-neutral-400">
          <p>
            <span aria-hidden="true">üìû</span>
            <a href="tel:+16236888422" class="hover:text-brand-accent transition-colors"
              >(623) 688-8422</a
            >
          </p>
          <p>
            <span aria-hidden="true">üìß</span>
            <a
              href="mailto:info@brooksfloorcovering.com"
              class="hover:text-brand-accent transition-colors">info@brooksfloorcovering.com</a
            >
          </p>
          <p><span aria-hidden="true">üìç</span> Serving Greater Phoenix Area</p>
          <p><span aria-hidden="true">üîí</span> ROC #226840</p>
        </address>
        <ul class="mt-4 space-y-2 text-neutral-400">
          <li><a href="/about" class="hover:text-brand-accent transition-colors">About</a></li>
          <li><a href="/gallery" class="hover:text-brand-accent transition-colors">Gallery</a></li>
          <li><a href="/contact" class="hover:text-brand-accent transition-colors">Contact</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-neutral-800 pt-8 text-center text-neutral-500 text-sm">
      <p>&copy; {currentYear} Brooks Floor Covering. All rights reserved.</p>
    </div>
  </div>
</footer>
