---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  image?: string;
  compact?: boolean;
}

const { title, subtitle, ctaText, ctaLink, image, compact = false } = Astro.props;
---

<section
  class={compact
    ? 'pt-20 bg-gradient-to-r from-blue-900 to-blue-700 text-white py-12'
    : 'pt-20 bg-gradient-to-r from-blue-900 to-blue-700 text-white'}
>
  <div
    class={compact
      ? 'container mx-auto px-4 py-8 md:py-12'
      : 'container mx-auto px-4 py-12 md:py-20'}
  >
    {
      !compact && image ? (
        <div class="flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12">
          <div class="md:w-1/2">
            <h1 class="text-3xl md:text-5xl font-bold mb-4 md:mb-6">{title}</h1>
            {subtitle && <p class="text-lg md:text-xl mb-6 md:mb-8 leading-relaxed">{subtitle}</p>}
            {ctaText && ctaLink && (
              <a
                href={ctaLink}
                class="inline-block bg-white text-blue-700 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition duration-300"
              >
                {ctaText}
              </a>
            )}
          </div>
          <div class="md:w-1/2">
            <img
              src={image}
              alt={title}
              class="rounded-lg shadow-xl w-full"
              width="960"
              height="720"
              loading="eager"
              decoding="async"
            />
          </div>
        </div>
      ) : (
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-3xl md:text-4xl font-bold mb-3">{title}</h1>
          {subtitle && <p class="text-lg md:text-xl opacity-90">{subtitle}</p>}
        </div>
      )
    }
  </div>
</section>
