---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  image?: string;
  compact?: boolean;
}

const { title, subtitle, ctaText, ctaLink, image, compact = false } = Astro.props;
---

<section
  class={compact
    ? 'pt-20 bg-gradient-to-br from-brand-dark to-brand-navy text-white py-12'
    : 'pt-20 bg-gradient-to-br from-brand-dark to-brand-navy text-white'}
>
  <div
    class={compact
      ? 'container mx-auto px-4 py-8 md:py-12'
      : 'container mx-auto px-4 py-12 md:py-20'}
  >
    {
      !compact && image ? (
        <div class="flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12">
          <div class="md:w-1/2">
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight mb-4 md:mb-6 font-display">
              {title}
            </h1>
            {subtitle && (
              <p class="text-lg md:text-xl mb-6 md:mb-8 leading-relaxed opacity-90">{subtitle}</p>
            )}
            {ctaText && ctaLink && (
              <a
                href={ctaLink}
                class="inline-block bg-brand-accent text-white px-8 py-3 rounded-lg font-semibold hover:bg-brand-accent-dark transition duration-300 shadow-lg"
              >
                {ctaText}
              </a>
            )}
          </div>
          <div class="md:w-1/2">
            <Image
              src={image}
              alt={title}
              class="rounded-lg shadow-xl w-full"
              width={960}
              height={720}
              inferSize
              loading="eager"
            />
          </div>
        </div>
      ) : (
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-3 font-display">{title}</h1>
          {subtitle && <p class="text-lg md:text-xl leading-relaxed opacity-90">{subtitle}</p>}
        </div>
      )
    }
  </div>
</section>
