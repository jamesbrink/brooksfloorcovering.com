---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  image?: string;
  compact?: boolean;
}

const { title, subtitle, ctaText, ctaLink, image, compact = false } = Astro.props;
---

<section class={compact ? "pt-24 bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16" : "pt-24 bg-gradient-to-r from-blue-900 to-blue-700 text-white"}>
  <div class="container mx-auto px-4 py-16 md:py-24">
    {!compact && image ? (
      <div class="flex flex-col md:flex-row items-center justify-between gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h1 class="text-4xl md:text-5xl font-bold mb-8">{title}</h1>
          {subtitle && <p class="text-xl mb-10 leading-relaxed">{subtitle}</p>}
          {ctaText && ctaLink && (
            <a 
              href={ctaLink} 
              class="inline-block bg-white text-blue-700 px-10 py-4 rounded-lg font-semibold hover:bg-blue-50 transition duration-300 text-lg"
            >
              {ctaText}
            </a>
          )}
        </div>
        <div class="md:w-1/2">
          <img 
            src={image} 
            alt={title}
            class="rounded-lg shadow-xl w-full"
          />
        </div>
      </div>
    ) : (
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
        {subtitle && <p class="text-xl">{subtitle}</p>}
      </div>
    )}
  </div>
</section>
