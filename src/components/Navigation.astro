---
import { Image } from 'astro:assets';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed w-full bg-white shadow-md z-50">
  <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center">
      <Image
        src="/images/logo.jpg"
        alt="Brooks Floor Covering Logo"
        class="h-14"
        width={233}
        height={56}
        inferSize
        loading="eager"
      />
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex space-x-8">
      {
        navLinks.map((link) => {
          const isActive =
            currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href));
          return (
            <a
              href={link.href}
              class={`transition-colors font-medium text-sm tracking-wide uppercase ${isActive ? 'text-brand-primary border-b-2 border-brand-primary pb-0.5' : 'text-neutral-700 hover:text-brand-primary'}`}
            >
              {link.label}
            </a>
          );
        })
      }
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden text-2xl text-neutral-700 hover:text-brand-primary"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white shadow-lg">
    <div class="px-4 py-3 space-y-1">
      {
        navLinks.map((link) => {
          const isActive =
            currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href));
          return (
            <a
              href={link.href}
              class={`block transition-colors py-2 px-3 rounded-md text-sm tracking-wide uppercase font-medium ${isActive ? 'text-brand-primary bg-blue-50' : 'text-neutral-700 hover:text-brand-primary hover:bg-neutral-50'}`}
            >
              {link.label}
            </a>
          );
        })
      }
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });

      // Close menu when clicking on a link
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach((link) => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
        });
      });
    }
  });
</script>
